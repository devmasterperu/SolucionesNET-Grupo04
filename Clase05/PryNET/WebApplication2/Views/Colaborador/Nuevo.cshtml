@using DAO
@model tb_Colaborador
@{
    ViewBag.Title = "Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nuevo Colaborador</h2>
@using (Html.BeginForm())
{
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.nombreColaborador, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.nombreColaborador, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.apellidoColaborador, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.apellidoColaborador, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.numeroDocumentoColaborador, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.numeroDocumentoColaborador, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.idRol, new { @class = "control-label" })
        @*@Html.TextBoxFor(model => model.idRol, htmlAttributes: new { @class = "form-control" })*@
        <select class="form-control" name="idRol">
            @foreach (var item in ViewBag.ListaRoles)
            {
                <option value="@item.idRol">@item.nombreRol</option>
            }
        </select>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.idTipoDocumento, new { @class = "control-label" })
        @*@Html.TextBoxFor(model => model.idRol, htmlAttributes: new { @class = "form-control" })*@
        <select class="form-control" name="idRol">
            @foreach (var item in ViewBag.ListaTipoDocumento)
            {
                <option value="@item.idTipoDocumento">@item.nombreTipoDocumento</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Registrar" class="btn btn-success" />
    </div>
</div>

}
