@using DAO
@model tb_Categoria
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model=> model.idCategoria)
    <div class="form-horizontal">
        <div class="form-group">
            <label>@Model.idCategoria</label>
            @*@Html.TextBoxFor(model => model.idCategoria, htmlAttributes: new { @class = "form-control" })*@            
        </div>
        <div class="form-group">
            @Html.LabelFor(modelo => modelo.nombreCategoria, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.nombreCategoria, htmlAttributes: new { @class = "form-control" })
            
        </div>
        <div class="form-group">
            <input type="submit" value="Registrar" class="btn btn-success" />
        </div>
    </div>
}